<?xml version="1.0"?>
<CreditAssignConfig>
    <enablePartlyAssign>true</enablePartlyAssign>
    <maxCreditAssignRate>0.10</maxCreditAssignRate>
    <maxCreditAssignDiscountRate>0.10</maxCreditAssignDiscountRate>
    <fee>
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.10</rate>
        <period>SINGLE</period>
        <scope>PRINCIPAL</scope>
    </fee>
    
    <lessSixMonthAssignServiceFee> <!--起息6个月内含6个月的转让平台服务费-->
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.5</rate>
        <period>SINGLE</period>
        <scope>ASSIGNAMOUNT</scope>
    </lessSixMonthAssignServiceFee>
    
    <moreSixMonthAssignServiceFee> <!--起息6个月以上的转让平台服务费-->
        <type>FLOATING</type>
        <fixed>0.00</fixed>
        <rate>0.25</rate>
        <period>SINGLE</period>
        <scope>ASSIGNAMOUNT</scope>
    </moreSixMonthAssignServiceFee>
    
    <assignableDateCarrayInterest>30</assignableDateCarrayInterest> <!--起息后可转让的时间期限, 单位为天-->
    <nonassignableBeforeDue>15</nonassignableBeforeDue>  <!--距离到期前一定期限内不可以转让, 单位为天--> 
    
    <startAssignableTime>08:10</startAssignableTime>  <!-- 可转让日每天哪个时刻以后可以申请转让 -->
    <endAssignableTime>22:10</endAssignableTime>  <!-- 可转让日每天哪个时刻以后不可以再申请转让 -->
    
</CreditAssignConfig>
